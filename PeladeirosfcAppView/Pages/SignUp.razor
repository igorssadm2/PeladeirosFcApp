@page "/signup"
@using PeladeirosfcAppView.Models
@inject NavigationManager Navigation
@inject IUsuarioService UsuarioService

<PageTitle>Cadastro - Peladeiros FC</PageTitle>

<div class="relative flex min-h-screen flex-col bg-background">
    <!-- Back Button -->
    <div class="p-3 sm:p-4 relative z-10">
        <a href="/" class="inline-flex items-center px-3 py-2 text-sm text-muted-foreground hover:text-foreground transition-colors rounded-md hover:bg-secondary/50">
            <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Voltar
        </a>
    </div>

    <div class="flex flex-1 justify-center px-5 sm:px-6 pb-8 relative z-10">
        <div class="w-full max-w-lg space-y-5 sm:space-y-6">
            <!-- Logo -->
            <div class="flex flex-col items-center">
                <a href="/" class="mb-3 sm:mb-4 flex h-12 w-12 sm:h-14 sm:w-14 items-center justify-center rounded-xl bg-primary shadow-lg">
                    <svg class="h-6 w-6 sm:h-8 sm:w-8 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2"></path>
                    </svg>
                </a>
                <h1 class="text-xl sm:text-2xl font-bold text-foreground">Crie sua conta</h1>
                <p class="mt-1.5 sm:mt-2 text-center text-sm sm:text-base text-muted-foreground">
                    Junte-se à comunidade e comece a jogar
                </p>
            </div>

            <!-- Google Sign Up -->
            <button type="button" class="h-11 sm:h-12 w-full border border-border bg-transparent text-foreground hover:bg-secondary text-sm sm:text-base rounded-lg transition-all inline-flex items-center justify-center">
                <svg class="mr-2 h-5 w-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                Cadastrar com Google
            </button>

            <!-- Divider -->
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-border"></div>
                </div>
                <div class="relative flex justify-center text-xs sm:text-sm">
                    <span class="bg-background px-4 text-muted-foreground">ou preencha o formulário</span>
                </div>
            </div>

            <!-- Form -->
            <EditForm Model="@signupModel" OnValidSubmit="@HandleSignup" class="space-y-5 sm:space-y-6">
                <DataAnnotationsValidator />

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="bg-destructive/10 border border-destructive/50 text-destructive px-3 sm:px-4 py-3 rounded-lg text-sm">
                        @errorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="bg-primary/10 border border-primary/50 text-primary px-3 sm:px-4 py-3 rounded-lg text-sm">
                        ? @successMessage
                    </div>
                }

                <!-- Dados Pessoais -->
                <div class="space-y-4">
                    <h2 class="text-sm font-semibold text-foreground border-b border-border pb-2">Dados Pessoais</h2>

                    <div class="space-y-1.5">
                        <label class="block text-sm text-foreground">Nome de Usuário</label>
                        <InputText @bind-Value="signupModel.UserName" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground placeholder:text-muted-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Seu nome de usuário" />
                        <ValidationMessage For="@(() => signupModel.UserName)" class="text-xs text-destructive mt-1 block" />
                    </div>

                    <div class="space-y-1.5">
                        <label class="block text-sm text-foreground">Apelido</label>
                        <InputText @bind-Value="signupModel.Apelido" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground placeholder:text-muted-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary" placeholder="Como te chamam no campo" />
                    </div>

                    <div class="space-y-1.5">
                        <label class="block text-sm text-foreground">Email</label>
                        <InputText @bind-Value="signupModel.Email" type="email" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground placeholder:text-muted-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary" placeholder="seu@email.com" />
                        <ValidationMessage For="@(() => signupModel.Email)" class="text-xs text-destructive mt-1 block" />
                    </div>

                    <div class="space-y-1.5">
                        <label class="block text-sm text-foreground">Telefone</label>
                        <InputText @bind-Value="signupModel.PhoneNumber" type="tel" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground placeholder:text-muted-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary" placeholder="(00) 00000-0000" />
                    </div>

                    <div class="grid grid-cols-2 gap-3 sm:gap-4">
                        <div class="space-y-1.5">
                            <label class="block text-sm text-foreground">Data de Nascimento</label>
                            <InputDate @bind-Value="signupModel.DataNascimento" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary" />
                        </div>

                        <div class="space-y-1.5">
                            <label class="block text-sm text-foreground">Gênero</label>
                            <InputSelect @bind-Value="signupModel.Genero" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Selecione</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                                <option value="Outro">Outro</option>
                                <option value="Prefiro não dizer">Prefiro não dizer</option>
                            </InputSelect>
                        </div>
                    </div>
                </div>

                <!-- Características do Jogador -->
                <div class="space-y-4">
                    <h2 class="text-sm font-semibold text-foreground border-b border-border pb-2">Características do Jogador</h2>

                    <div class="grid grid-cols-2 gap-3 sm:gap-4">
                        <div class="space-y-1.5">
                            <label class="block text-sm text-foreground">Pé Dominante</label>
                            <InputSelect @bind-Value="signupModel.PeDominante" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Selecione</option>
                                <option value="Direito">Direito</option>
                                <option value="Esquerdo">Esquerdo</option>
                                <option value="Ambidestro">Ambidestro</option>
                            </InputSelect>
                        </div>

                        <div class="space-y-1.5">
                            <label class="block text-sm text-foreground">Posição</label>
                            <InputSelect @bind-Value="signupModel.Posicao" class="w-full h-10 sm:h-11 px-4 border border-border rounded-lg bg-card/80 text-foreground text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                                <option value="">Selecione</option>
                                <option value="Goleiro">Goleiro</option>
                                <option value="Zagueiro">Zagueiro</option>
                                <option value="Lateral Direito">Lateral Direito</option>
                                <option value="Lateral Esquerdo">Lateral Esquerdo</option>
                                <option value="Volante">Volante</option>
                                <option value="Meio-campo">Meio-campo</option>
                                <option value="Meia Atacante">Meia Atacante</option>
                                <option value="Ponta Direita">Ponta Direita</option>
                                <option value="Ponta Esquerda">Ponta Esquerda</option>
                                <option value="Centroavante">Centroavante</option>
                            </InputSelect>
                        </div>
                    </div>
                </div>

                <button type="submit" disabled="@isLoading" class="h-11 sm:h-12 w-full bg-primary text-primary-foreground hover:bg-primary/90 disabled:bg-gray-400 disabled:cursor-not-allowed text-sm sm:text-base font-semibold rounded-lg transition-all shadow-sm hover:shadow-md">
                    @if (isLoading)
                    {
                        <span class="flex items-center justify-center">
                            <svg class="animate-spin -ml-1 mr-2 h-5 w-5 text-current" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Criando conta...
                        </span>
                    }
                    else
                    {
                        <span>Criar conta</span>
                    }
                </button>
            </EditForm>

            <!-- Sign In Link -->
            <p class="text-center text-sm sm:text-base text-muted-foreground">
                Já tem uma conta? 
                <a href="/login" class="font-medium text-primary hover:underline ml-1">
                    Entrar
                </a>
            </p>
        </div>
    </div>
</div>

@code {
    private SignUpModel signupModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;

    private async Task HandleSignup()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            successMessage = string.Empty;

            var usuario = new Usuario
            {
                Id = Guid.NewGuid().ToString(),
                UserName = signupModel.UserName,
                Email = signupModel.Email,
                PhoneNumber = signupModel.PhoneNumber,
                Apelido = signupModel.Apelido,
                DataNascimento = signupModel.DataNascimento,
                Genero = signupModel.Genero,
                PeDominante = signupModel.PeDominante,
                Posicao = signupModel.Posicao
            };

            await UsuarioService.CreateUsuarioAsync(usuario);

            successMessage = "Conta criada com sucesso! Redirecionando para login...";
            await Task.Delay(2000);
            Navigation.NavigateTo("/login");
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Erro de conexão com a API: {ex.Message}. Verifique se a API está rodando.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao criar conta: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class SignUpModel
    {
        [Required(ErrorMessage = "Nome de usuário é obrigatório")]
        public string UserName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email é obrigatório")]
        [EmailAddress(ErrorMessage = "Email inválido")]
        public string Email { get; set; } = string.Empty;

        public string? PhoneNumber { get; set; }
        public string? Apelido { get; set; }
        public DateTime? DataNascimento { get; set; }
        public string? Genero { get; set; }
        public string? PeDominante { get; set; }
        public string? Posicao { get; set; }
    }
}

