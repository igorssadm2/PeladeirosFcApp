@inject NavigationManager Navigation

<header class="fixed top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
    <div class="mx-auto max-w-7xl px-5 sm:px-6 lg:px-8">
        <div class="flex h-14 sm:h-16 items-center justify-between">
            <div class="flex items-center gap-2 cursor-pointer" @onclick="@(() => Navigation.NavigateTo("/"))">
                <div class="flex h-7 w-7 sm:h-8 sm:w-8 items-center justify-center rounded-lg bg-primary">
                    <svg class="h-3.5 w-3.5 sm:h-4 sm:w-4 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2"></path>
                    </svg>
                </div>
                <span class="text-base sm:text-lg font-semibold text-foreground">Peladeiros FC</span>
            </div>

            <AuthorizeView>
                <Authorized>
                    <div class="flex items-center gap-3">
                        <span class="hidden sm:inline text-sm text-muted-foreground">Olá, @context.User.Identity?.Name!</span>
                        <button @onclick="Logout" class="px-3 py-1.5 sm:px-4 sm:py-2 text-xs sm:text-sm border border-border rounded-md hover:bg-secondary transition-colors">
                            Sair
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="flex items-center gap-2 sm:gap-3">
                        <button @onclick="@(() => Navigation.NavigateTo("/login"))" class="px-3 py-1.5 sm:px-4 sm:py-2 text-xs sm:text-sm text-foreground hover:text-primary transition-colors">
                            Entrar
                        </button>
                        <button @onclick="@(() => Navigation.NavigateTo("/signup"))" class="px-3 py-1.5 sm:px-4 sm:py-2 text-xs sm:text-sm bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors">
                            Cadastrar
                        </button>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</header>

@code {
    [Inject] private CustomAuthenticationStateProvider? AuthStateProvider { get; set; }

    private void Logout()
    {
        AuthStateProvider?.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/");
    }
}
