@inject NavigationManager Navigation

<section class="relative flex min-h-[calc(100vh-64px)] flex-col items-center justify-center overflow-hidden px-4 pt-24 pb-12 sm:px-6 lg:px-8">
    <!-- Background Elements -->
    <div class="absolute inset-0 -z-10">
        <div class="absolute left-1/4 top-1/4 h-64 w-64 sm:h-96 sm:w-96 rounded-full bg-primary/10 blur-3xl"></div>
        <div class="absolute bottom-1/4 right-1/4 h-64 w-64 sm:h-96 sm:w-96 rounded-full bg-accent/10 blur-3xl"></div>
    </div>

    <div class="mx-auto max-w-4xl w-full text-center">
        <!-- Badge -->
        <div class="mb-6 inline-flex items-center gap-2 rounded-full border border-border bg-card px-3 py-1.5 shadow-sm">
            <span class="h-2 w-2 animate-pulse rounded-full bg-primary"></span>
            <span class="text-xs text-muted-foreground">Nova forma de jogar</span>
        </div>

        <!-- Main Headline -->
        <h1 class="mb-6 text-3xl font-bold leading-tight tracking-tight text-foreground sm:text-4xl md:text-5xl lg:text-6xl">
            Jogue mais, <span class="text-primary">organize menos.</span>
        </h1>

        <!-- Subheadline -->
        <p class="mx-auto mb-8 max-w-2xl px-4 text-base leading-relaxed text-muted-foreground sm:text-lg md:text-xl">
            Encontre partidas próximas a você, registre seus gols e suba de nível com a comunidade.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col items-center justify-center gap-3 px-4 sm:flex-row sm:gap-4">
            <a href="/signup" class="group w-full sm:w-auto h-12 px-8 text-base bg-primary text-primary-foreground hover:bg-primary/90 rounded-lg font-medium transition-all inline-flex items-center justify-center shadow-sm hover:shadow-md">
                Começar agora
                <svg class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </a>
            <a href="/login" class="w-full sm:w-auto h-12 px-8 text-base border border-border text-foreground hover:bg-secondary bg-transparent rounded-lg font-medium transition-all inline-flex items-center justify-center">
                Já tenho conta
            </a>
        </div>

        <!-- Stats -->
        <div class="mt-12 sm:mt-16 grid grid-cols-3 gap-3 px-4 sm:gap-6 lg:gap-8">
            <div class="flex flex-col items-center gap-2 rounded-xl border border-border bg-card/50 p-4 sm:p-6 backdrop-blur-sm transition-all hover:border-primary/50 hover:shadow-md">
                <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-full bg-primary/20">
                    <svg class="h-5 w-5 sm:h-6 sm:w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <span class="text-xl sm:text-2xl font-bold text-foreground">1.5k+</span>
                <span class="text-xs text-muted-foreground text-center">Partidas</span>
            </div>
            <div class="flex flex-col items-center gap-2 rounded-xl border border-border bg-card/50 p-4 sm:p-6 backdrop-blur-sm transition-all hover:border-primary/50 hover:shadow-md">
                <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-full bg-accent/20">
                    <svg class="h-5 w-5 sm:h-6 sm:w-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                    </svg>
                </div>
                <span class="text-xl sm:text-2xl font-bold text-foreground">25k+</span>
                <span class="text-xs text-muted-foreground text-center">Gols</span>
            </div>
            <div class="flex flex-col items-center gap-2 rounded-xl border border-border bg-card/50 p-4 sm:p-6 backdrop-blur-sm transition-all hover:border-primary/50 hover:shadow-md">
                <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center rounded-full bg-primary/20">
                    <svg class="h-5 w-5 sm:h-6 sm:w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <span class="text-xl sm:text-2xl font-bold text-foreground">8k+</span>
                <span class="text-xs text-muted-foreground text-center">Jogadores</span>
            </div>
        </div>
    </div>
</section>
